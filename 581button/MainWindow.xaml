<Window x:Class="TeemoHoverTest.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeemoHoverTest"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="HoverTest"
        Height="800" Width="1500" WindowState="Maximized" WindowStyle="None" >

    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="White"/>
            <Setter Property="Stroke" Value="LightGray" />
            <Setter Property="StrokeThickness" Value="0.5" />
            <Setter Property="Opacity" Value="0" />
        </Style>

        <Storyboard x:Key="Teemo_Expand">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" By="1" Duration="0:0:3" />
            <DoubleAnimation Storyboard.TargetProperty="Height" BeginTime="0:0:3" From="5" By="2000" AccelerationRatio="0.25" DecelerationRatio="0.75" Duration="0:0:20" />
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:3" From="5" By="2000" AccelerationRatio="0.25" DecelerationRatio="0.75" Duration="0:0:20" />
        </Storyboard>

        <!--Shroom image fades out-->
        <Storyboard x:Key="Shroom_Explosion">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:1" To="0" AccelerationRatio="1" Duration="0:0:0.25" />
        </Storyboard>

        <!--#region Health bar animations-->

        <!--First shroom is hit-->
        <Storyboard x:Key="Health_Bar_Decrease1">
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.25" From="550" To="459" DecelerationRatio="0.25" Duration="0:0:0.25" />
        </Storyboard>

        <!--Second shroom is hit-->
        <Storyboard x:Key="Health_Bar_Decrease2">
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.25" From="459" To="368" DecelerationRatio="0.5" Duration="0:0:0.25" />
        </Storyboard>

        <!--Third shroom is hit-->
        <Storyboard x:Key="Health_Bar_Decrease3">
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.25" From="368" To="277" DecelerationRatio="0.5" Duration="0:0:0.25" />
        </Storyboard>

        <!--Fourth shroom is hit-->
        <Storyboard x:Key="Health_Bar_Decrease4">
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.25" From="277" To="186" DecelerationRatio="0.5" Duration="0:0:0.25" />
        </Storyboard>

        <!--Fifth shroom is hit-->
        <Storyboard x:Key="Health_Bar_Decrease5">
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.25" From="186" To="95" DecelerationRatio="0.5" Duration="0:0:0.25" />
        </Storyboard>

        <!--Last shroom is hit-->
        <Storyboard x:Key="Health_Bar_Decrease6">
            <DoubleAnimation Storyboard.TargetProperty="Width" BeginTime="0:0:0.25" From="95" To="4" DecelerationRatio="0.5" Duration="0:0:0.25" />
        </Storyboard>

        <!--#endregion-->


    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Images/summonersrift.png"/>
    </Window.Background>


